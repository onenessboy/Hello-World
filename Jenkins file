node{
   
    stage('SCM Checkout'){
        git credentialsId: 'GIT_CREDENTIALS', url:  'https://github.com/kiran1812/Hello-World'
    }
   
    stage('Build Docker Image'){
        sh 'docker build -t kiranmoluguri/kiran_1234:my-app-latest .'
    }

    stage('Push Docker Image'){
        withCredentials([string(credentialsId: 'DOKCER_HUB_PASSWORD', variable: 'DOKCER_HUB_PASSWORD')]) {
          sh "docker login -u dockerhandson -p ${DOKCER_HUB_PASSWORD}"
        }
        sh 'docker push kiranmoluguri/kiran_1234:my-app-latest'
     }
     
     stage("Deploy To Kuberates Cluster"){
       kubernetesDeploy(
         configs: 'Deployment.yml',
         kubeconfigId: 'KUBERNATES_CONFIG',
        )
     }
 /**
      stage("Deploy To Kuberates Cluster"){
        sh 'kubectl apply -f service.yml'
      } **/
     
}
